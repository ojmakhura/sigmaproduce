{
  "name": "sigmaproduce",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "generate": "ng generate",
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\"",
    "docs": "hads -o -p 4040",
    "docs:build": "hads -o -p 4040"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,html,scss,css,json}": [
      "prettier --write"
    ],
    "src/**/*.ts": [
      "ng lint --fix"
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.0",
    "@ngrx/signals": "^21.0.0-rc.0",
    "@ngrx/operators": "^21.0.0-rc.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "express": "^5.1.0",
    "keycloak-angular": "^21.0.0",
    "keycloak-js": "^26.2.0",
    "ngx-mat-select-search": "^8.0.4",
    "ngx-spinner": "^19.0.0",
    "ngx-toastr": "^19.1.0",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.26.10",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "hads": "^3.0.3",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
